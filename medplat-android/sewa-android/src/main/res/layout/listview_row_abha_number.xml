<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selector"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.90"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingBottom="2dp"
            android:textAppearance="@style/ListTextView"
            android:textColor="@color/placeHolderTextColor"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_first_text_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:lines="1"
            android:textAppearance="@style/ListTextView"
            android:textColor="@color/listview_text_color_selector"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Name" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/abhaNumberImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical|start"
        android:layout_weight="0.10"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_medical_card" />
</LinearLayout>